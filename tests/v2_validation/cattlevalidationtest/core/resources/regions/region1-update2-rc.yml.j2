version: '2'
services:
  lb-1:
    scale: 1
    start_on_create: true
    lb_config:
      certs: []
      port_rules:
      - priority: 1
        protocol: http
        region: {{ region1 }}
        environment: {{ project3 }}
        selector: foo=bar
        source_port: 9000
        target_port: 80
        weight: 1
      - priority: 1
        protocol: http
        region: {{ region1 }}
        environment: {{ project2 }}
        selector: foo=bar
        source_port: 9000
        target_port: 80
        weight: 1
    health_check:
      response_timeout: 2000
      healthy_threshold: 2
      port: 42
      unhealthy_threshold: 3
      initializing_timeout: 60000
      interval: 2000
      reinitializing_timeout: 60000
